<%=render 'shared/errors' obj:@user%>

<div class = "row">
    <div class = "col-xs12">
        <%=form_for (@user, :html => {class: "form-horizontal",  role: "form"}) do |f|%>
    <div class = "form-group">
        <div class = "control-label col-sm-2">
            <%=f.label :username%><br/>
        </div>
        <div class = "col-sm-8s">
            <%=f.text_field :username, class ="form-control", placeholder: "Enter the username", autofocus: true%>
        </div>
    </div>
    
        <div class = "col-xs12">
            <%=f.label :email%>
        </div>
        <div class = "col-sm-8s">
            <%=f.email_field :email, class = "form-control", placeholder: "Enter the email"%>
        </div>
        
          <div class = "col-xs12">
            <%=f.label :passsword%>
        </div>
        <div class = "col-sm-8s">
            <%=f.password_field :password, class = "form-control", placeholder: "Enter password"%>
        </div>
        
        <div class = "row">
        <div class = "form-group">
            <div class = "col-sm-offsrt-2 col-sm-8">
                 <%=f.collection_check_boxes :categories_ids, Category.all, :id, do |cb|%>
                 <%=cd.label(class: "checkbox_inline inpt_checkbox") {cb.check_box(class: "checkbox)"} + cb.text }%>
        </div>
        
        <div class = "form-group">
            <div class = "col-sm-10">
                 <%=f.submit(@user.new_record? ? "Signup" : "Updated", class: btn btn-primary btn-lg )%>
        </div>
            </div>
        </div>
    <%end%>
    <div class = "col-xs-4 col-xs-offset-4" >
    <%=link_to "Cancel request and return to the article listing", articles_path%>
    </div>
</div>
</div>