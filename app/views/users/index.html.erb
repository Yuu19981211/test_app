<h1 align = "center">All paticipants</h1>
<div align = "center">
    <%=will_paginate%>
<%=@users.each.do|user|%>
    <ul class = "listing">
        <div class = "row">
            <div class = "well col-md-4 col-md-offset-4">
                <li><%=link_to gravator_for(user), user_path(user)%></li>
            <div class = "article_title">
                <li><%=link_to user.username, user_path(user) %></li>
                <li><small><%=pluralize(user.article.count, "article") if user.articles%></small></li>
            </div>
            </div>
        </div>
    </ul>
    <%=will_paginate%>
</div>
<%end%>